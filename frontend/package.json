{
    "name": "robomentor-electron",
    "version": "1.0.0",
    "description": "Electron frontend for RoboMentor application",
    "main": "main.js",
    "homepage": "./",
    "scripts": {
        "start": "npm run build && electron .",
        "dev": "webpack serve --mode development",
        "dev-electron": "npm run build && electron . --dev",
        "build": "webpack --mode production",
        "build-backend": "python3 ../scripts/build_backend.py",
        "build-electron": "npm run build && npm run build-backend && electron-builder",
        "build-win": "npm run build && npm run build-backend && electron-builder --win",
        "build-mac": "npm run build && npm run build-backend && electron-builder --mac",
        "build-linux": "npm run build && npm run build-backend && electron-builder --linux",
        "build-all": "npm run build && npm run build-backend && electron-builder --win --linux",
        "dist": "npm run build-all"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "@mui/material": "^5.14.0",
        "@mui/icons-material": "^5.14.0",
        "@mui/lab": "^5.0.0-alpha.140",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "react-router-dom": "^6.14.0",
        "@fullcalendar/react": "^6.1.8",
        "@fullcalendar/daygrid": "^6.1.8",
        "@fullcalendar/timegrid": "^6.1.8",
        "@fullcalendar/interaction": "^6.1.8",
        "recharts": "^2.7.0",
        "framer-motion": "^10.12.16",
        "date-fns": "^2.30.0"
    },
    "devDependencies": {
        "electron": "^25.0.0",
        "electron-builder": "^24.6.4",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@babel/core": "^7.22.0",
        "@babel/preset-env": "^7.22.0",
        "@babel/preset-react": "^7.22.0",
        "babel-loader": "^9.1.0",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "html-webpack-plugin": "^5.5.0",
        "css-loader": "^6.8.0",
        "style-loader": "^3.3.0",
        "webpack-dev-server": "^4.15.0"
    },
    "build": {
        "appId": "com.robomentor.app",
        "productName": "RoboMentor",
        "directories": {
            "output": "dist"
        },
        "asar": false,
        "files": [
            "**/*",
            "!dist/**/*",
            "!build/**/*",
            "!*.md",
            "!scripts/**/*"
        ],
        "extraFiles": [
            {
                "from": "../backend/dist/robomentor-backend",
                "to": "resources/robomentor-backend"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": "AppImage",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "author": "RoboMentor Team",
    "license": "MIT"
}